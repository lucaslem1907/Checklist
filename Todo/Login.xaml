<UserControl x:Class="Checklist.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checklist"
             Height="450" Width="450">

    <Grid Name="MyGrid" Background="GhostWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Label Content="Please Login" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan ="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
        <Label Content="Name" Grid.Column="1" Grid.Row="3" VerticalAlignment="Center"/>
        <ListBox Name="Names" Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" SelectionMode="Single">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name, StringFormat='Name: {0}'}"/>
                        <TextBlock Text="{Binding ID, StringFormat='ID: {0}'}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label Content="Age" Grid.Column="1" Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Age, Mode = OneWay}" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
        <Label Content="Pasword" Grid.Column="1" Grid.Row="6" VerticalAlignment="Center"/>
        <PasswordBox PasswordChanged="OnPasswordChanged" Name="Pasword" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
        
        <Button Name="LoginBttn" IsEnabled="False" Click="Button_Click" Content="Login" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan ="3" Background="#FFE68C8C"/>
        <Label Name="ErrorLabel" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan ="3" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#FFD82020"/>
    </Grid>
</UserControl>
